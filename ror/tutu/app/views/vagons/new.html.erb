<h1>Новый вагон</h1>

<%= form_for [@train, @vagon] do |f| %>
  <div class="field">
    <%= f.label :number ,"Номер вагона" %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :type ,"Тип вагона"%><br>
    <%= f.select :type, [['LuxuryCarriage'], ['CoupeCarriage'], ['EconomyCarriage'], ['SedentaryCarriage']]%>
  </div>
  <div class="field">
    <%= f.label :up_seat ,"Верхних мест"%><br>
    <%= f.number_field :up_seat %>
  </div>
  <div class="field">
    <%= f.label :down_seat ,"Нижних мест"%><br>
    <%= f.number_field :down_seat %>
  </div>
  <div class="field">
    <%= f.label :side_up_seat ,"Боковых верних мест"%><br>
    <%= f.number_field :side_up_seat %>
  </div>
  <div class="field">
    <%= f.label :side_down_seat ,"Боковых нижних мест"%><br>
    <%= f.number_field :side_down_seat %>
  </div>
  <div class="field">
    <%= f.label :seat_place ,"Сидячих мест"%><br>
    <%= f.number_field :seat_place %>
  </div>
  <div class="actions">
    <%= f.submit "#{@vagon.new_record? ? 'Создать вагон' : 'Обновить вагон'}" %>
  </div>
<% end %>

<%= link_to 'Назад', train_vagons_path %>
