<%= form_for(@route) do |f| %>
  <%= render 'common/errors', resources: @route %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :railway_station_ids, "Станции" %><br>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true }%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
