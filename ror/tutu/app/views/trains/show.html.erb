<p id="notice"><%= notice %></p>

<p>
  <strong>Train number:</strong>
  <%= @train.train_number %>
</p>

<p>
  <strong>Маршрут:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Маршрут не назначен
  <%end%>
</p>

<p>
  <strong>Количество вагонов:</strong>
  <% if @train.vagons.empty? %>
    Вагонов нет
  <% else %>
    <ul>
    <% @train.vagons.each do |vagon| %>
      <li>Тип:<%= vagon.vagon_type %></li>
      Верхни мест:<%= vagon.up_seat %>
      Нижних мест:<%= vagon.down_seat %>
    <% end %>
    </ul>
  <% end %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
