<p id="notice"><%= notice %></p>

<h1>Список станций</h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |rws| %>
      <tr>
        <td><%= rws.name %></td>
        <td><%= link_to 'Показать', rws %></td>
        <td><%= link_to 'Редактировать', edit_railway_station_path(rws) %></td>
        <td><%= link_to 'Удалить', rws, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая станция', new_railway_station_path %>
