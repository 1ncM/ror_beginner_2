<%= form_for(@railway_station) do |f| %>
  <%= render 'common/errors', resources: @railway_station %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit @railway_station.new_record? ? 'Создать' : 'Обновить' %>
  </div>
<% end %>
