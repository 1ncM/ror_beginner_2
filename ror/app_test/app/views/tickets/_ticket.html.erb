<tr>
  <td><%= ticket.train.number %></td>
  <td><%= ticket.owner %></td>
  <td><%= ticket.passport %></td>
  <td><%= ticket.first_station.name %></td>
  <td><%= ticket.last_station.name %></td>
  <td><%= link_to 'Показать', user_ticket_path(@user, ticket) %></td>
  <td><%= link_to 'Удалить', user_ticket_path(@user, ticket), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
</tr>