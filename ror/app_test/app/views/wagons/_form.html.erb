<%= form_for(@wagon) do |f| %>
  <%= render 'common/errors', resources: @wagon %>

<!--   <div class="field">
    <%= f.label :number, 'Номер вагона'%><br>
    <%= f.number_field :number %>
  </div> -->

  <div class="field">
    <%= f.label :train_id, 'Укажите поезд:'%><br>
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= f.label :type, 'Укажите тип вагона:'%><br>
    <%= f.select :type, [['Купейный','CoupeCarriage'], ['Плацкартный','EconomyCarriage'], ['СВ','SWCarriage'], ['Сидячий','SedentaryCarriage']] %>
  </div>

  <div class="field">
    <%= f.label :up_seats, 'Верхних мест:'%><br>
    <%= f.number_field :up_seats %>
  </div>

  <div class="field">
    <%= f.label :down_seats, 'Нижних мест:'%><br>
    <%= f.number_field :down_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats ,"Боковых верних мест"%><br>
    <%= f.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats ,"Боковых нижних мест"%><br>
    <%= f.number_field :side_bottom_seats %>
  </div>
  <div class="field">
    <%= f.label :seat_place ,"Сидячих мест"%><br>
    <%= f.number_field :seat_place %>
  </div>
  <div class="actions">
    <%= f.submit @wagon.new_record? ? 'Создать' : 'Обновить' %>
  </div>
<% end %>
