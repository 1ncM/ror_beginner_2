<h1>Список вагонов</h1>

<table>
  <thead>
    <tr>
      <th>Номер</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wagons.each do |wagon| %>
      <%= render partial: 'wagon', locals: {wagon: wagon} %>
    <% end %>  
  </tbody>
</table>

<br>

<%= link_to 'Новый вагон', new_wagon_path %>
